{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "experimentalDecorators": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
      "./src/**/*"
    ],

    "exclude": [
        "node_modules"
    ]
}